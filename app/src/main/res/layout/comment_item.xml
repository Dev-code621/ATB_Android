<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/view_reply"
            android:layout_width="30dp"
            android:layout_height="1dp"
            android:visibility="gone"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/txv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/txt_color"
                android:padding="10dp"
                android:autoLink="web"

                android:background="@drawable/comment_text_round"/>
            <ImageView
                android:id="@+id/imv_image1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/image_thumnail"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_rectangle_round1"/>
            <ImageView
                android:id="@+id/imv_image2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/image_thumnail"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_rectangle_round1"/>
            <ImageView
                android:id="@+id/imv_image3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/image_thumnail"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_rectangle_round1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    style="@style/textTheme"
                    android:textColor="@color/txt_color"/>
                <LinearLayout
                    android:id="@+id/lyt_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:id="@+id/imv_like"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_health_unselect" />
                    <TextView
                        android:id="@+id/txv_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/boldtextTheme"
                        android:text="Like"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/head_color"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_reply"
                        android:tint="@color/head_color"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/boldtextTheme"
                        android:text="Reply"
                        android:layout_marginLeft="5dp"
                        android:textSize="14sp"
                        android:textColor="@color/head_color"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>