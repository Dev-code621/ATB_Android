<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.newsfeedpost.NewPollVotingActivity"
    android:orientation="vertical"
    android:background="@color/signup_popup_color"
    android:id="@+id/lyt_container">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/lyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_back2"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:layout_gravity="center"
                style="@style/textTheme"
                android:textColor="@color/head_color"
                android:textSize="22sp"
                android:visibility="gone"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/poll_votting"
            android:layout_gravity="center"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="24sp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lyt_back"
            android:layout_marginLeft="10dp"/>
        <FrameLayout
            android:id="@+id/lyt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_business"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="right|bottom"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@color/head_color">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_down_up" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lyt_addimage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edit_rectangle_round1"
                android:paddingLeft="20dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/imv_imageicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_image"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_picture"
                    style="@style/textTheme"
                    android:textSize="16sp"
                    android:textColor="@color/txt_color"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_images"
                android:visibility="gone"/>
        </FrameLayout>

        <EditText
            android:id="@+id/edt_question"
            style="@style/edit_inputtext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:hint="@string/make_question"
            android:textSize="15sp"
            android:inputType="text"
            android:singleLine="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/edit_rectangle_round"
            android:layout_marginTop="15dp"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/options"
                style="@style/boldtextTheme"
                android:textSize="16sp"
                android:textColor="@color/txt_color" />
            <LinearLayout
                android:id="@+id/lyt_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edit_option1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_color"
                    android:hint="Option 1"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_border_round"/>
                <LinearLayout
                    android:id="@+id/lyt_option1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imv_optionselector1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_next_selector"
                        android:layout_gravity="right|center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/edit_option2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_color"
                    android:hint="Option 2"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_border_round"/>
                <LinearLayout
                    android:id="@+id/lyt_option2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imv_optionselector2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_next_selector"
                        android:layout_gravity="right|center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edit_option3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_color"
                    android:hint="Option 3"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_border_round"/>
                <LinearLayout
                    android:id="@+id/lyt_option3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imv_optionselector3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_next_selector"
                        android:layout_gravity="right|center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_container4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edit_option4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_color"
                    android:hint="Option 4"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_border_round"/>
                <LinearLayout
                    android:id="@+id/lyt_option4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imv_optionselector4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_next_selector"
                        android:layout_gravity="right|center"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_container5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/edit_option5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/txt_color"
                    android:hint="Option 5"
                    android:singleLine="true"
                    android:background="@drawable/rectangle_border_round"/>
                <LinearLayout
                    android:id="@+id/lyt_option5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical">
                    <ImageView
                        android:id="@+id/imv_optionselector5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/add_next_selector"
                        android:layout_gravity="right|center"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/button_rectangle_round">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/poll_duration"
                style="@style/boldtextTheme"
                android:textSize="16sp" />
            <EditText
                android:id="@+id/edt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:maxLength="1"
                style="@style/boldtextTheme"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="16sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="day"
                style="@style/boldtextTheme"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/lyt_imvselect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imv_selector"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/white_check_selector"
                    android:layout_gravity="right|center"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_in"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:orientation="vertical" />
            <org.angmarch.views.NiceSpinner
                android:id="@+id/spiner_category_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                app:entries="@array/category_type"
                style="@style/textTheme"
                android:textSize="15sp"
                app:popupTextAlignment="start"
                android:background="@drawable/edit_rectangle_round1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txv_post"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/complete_post"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            style="@style/btn_buttonStyle"
            android:background="@drawable/button_rectangle_round"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>