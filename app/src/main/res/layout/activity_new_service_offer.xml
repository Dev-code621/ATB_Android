<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.newsfeedpost.NewServiceOfferActivity"
    android:orientation="vertical"
    android:background="@color/signup_popup_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <RelativeLayout
            android:id="@+id/lyt_post"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lyt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_back2"
                    android:paddingLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:layout_gravity="center"
                    style="@style/textTheme"
                    android:textColor="@color/head_color"
                    android:textSize="22sp"
                    android:visibility="gone"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post_a_service"
                android:layout_gravity="center"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="24sp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/lyt_back"
                android:layout_marginLeft="10dp"/>
            <FrameLayout
                android:id="@+id/lyt_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_user_info_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:layout_gravity="center"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/imv_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:actualImageScaleType="centerCrop"
                        app:placeholderImage="@drawable/profile_pic"/>
                </androidx.cardview.widget.CardView>
            </FrameLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lyt_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <ImageView
                android:id="@+id/imv_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_serviceoffer"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:tint="@color/head_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Service"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/imv_icon"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_centerVertical="true" />
            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/close"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lyt_container"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/media_type"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spiner_media_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:entries="@array/media_type1"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:textColor="@color/txt_color"
                    app:popupTextAlignment="start"
                    android:background="@drawable/edit_rectangle_round1"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lyt_image_video"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <FrameLayout
                    android:id="@+id/lyt_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_rectangle_round1"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/imv_videothumnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/imv_videoicon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_videoadd"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/lyt_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_rectangle_round1"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:id="@+id/imv_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/imv_imageicon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_image"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imv_image1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image2"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1"
                                android:layout_marginTop="10dp" />
                            <ImageView
                                android:id="@+id/imv_image3"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1" />
                            <ImageView
                                android:id="@+id/imv_image4"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image5"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image6"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image7"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image8"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </FrameLayout>

            <EditText
                android:id="@+id/edt_title"
                style="@style/edit_inputtext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="@string/add_title"
                android:inputType="text"
                android:textSize="15sp"
                android:singleLine="true" />
            <EditText android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:hint="@string/description"
                android:layout_marginTop="15dp"
                android:paddingTop="15dp"
                android:theme="@style/textTheme"
                android:textSize="15sp"
                style="@style/edit_inputtext"
                android:gravity="start"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Price form"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_rectangle_round">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_paymentblue"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/edt_price"
                        style="@style/edit_inputtext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:gravity="right|center"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Day Required NO/YES"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_duration"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lyt_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Duration\nIn Hours"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txv_duration_minus"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:text="-"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="22sp"/>
                    <TextView
                        android:id="@+id/txt_duration"
                        style="@style/edit_inputtext"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:text="1"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/txv_duration_plus"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:text="+"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="22sp"/>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/depost_require"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_deposit"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lyt_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/deposit"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/edit_rectangle_round">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_paymentblue"
                        android:layout_gravity="center"/>
                    <EditText
                        android:id="@+id/edt_deposit"
                        style="@style/edit_inputtext"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="0.00"
                        android:textSize="15sp"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:gravity="right|center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel_day"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txv_minus"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:text="-"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="22sp"/>
                    <TextView
                        android:id="@+id/txt_cancelday"
                        style="@style/edit_inputtext"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:text="14"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:inputType="number"
                        android:singleLine="true" />
                    <TextView
                        android:id="@+id/txv_plus"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:text="+"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="22sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/post_in"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spiner_category_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:entries="@array/category_type"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    android:textColor="@color/txt_color"
                    app:popupTextAlignment="start"
                    android:background="@drawable/edit_rectangle_round1"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:id="@+id/txv_location"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:hint="@string/area_covered"
                    android:textSize="15sp"
                    style="@style/edit_inputtext" />
<!--                <ImageView-->
<!--                    android:layout_width="20dp"-->
<!--                    android:layout_height="20dp"-->
<!--                    android:src="@drawable/icon_location"-->
<!--                    android:layout_gravity="right|center"-->
<!--                    android:layout_marginRight="10dp" />-->
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/require_quality"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_quality"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical">
                <TextView android:id="@+id/txv_quality"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="@string/no_quality"
                    style="@style/edit_inputtext"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:background="@drawable/edit_rectangle_round1"/>
                <LinearLayout
                    android:id="@+id/lyt_qualitfied"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/edit_rectangle_round"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:id="@+id/lyt_qualitfied_minus"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_minus" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/head_color"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView android:id="@+id/txv_quality_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:hint="@string/no_quality"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                style="@style/textTheme"
                                android:textColor="@color/txt_color"
                                android:text="TEST test" />
                            <TextView android:id="@+id/txv_quality_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:hint="@string/no_quality"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                style="@style/textTheme"
                                android:textColor="@color/head_color"
                                android:text="TEST test" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_qualitfied_plus"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:gravity="center"
                        android:layout_marginLeft="20dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_plus2"
                            android:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/require_insurance"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_insurance"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical">
                <TextView android:id="@+id/txv_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:hint="@string/no_insurance"
                    style="@style/edit_inputtext"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:background="@drawable/edit_rectangle_round1"/>
                <LinearLayout
                    android:id="@+id/lyt_insurance"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/edit_rectangle_round"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:id="@+id/lyt_insurance_minus"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                             android:gravity="center">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/icon_minus" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/head_color"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical">
                            <TextView android:id="@+id/txv_insurance_name"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:hint="@string/no_quality"
                                android:gravity="center_vertical"
                                android:textSize="15sp"
                                style="@style/textTheme"
                                android:textColor="@color/txt_color"
                                android:text="TEST test" />
                            <TextView android:id="@+id/txv_insurance_time"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:maxLines="2"
                                android:hint="@string/no_quality"
                                android:gravity="center_vertical|right"
                                android:textSize="15sp"
                                android:layout_gravity="end"
                                style="@style/textTheme"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/head_color"
                                android:text="Expire\n 2023-45-343434" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lyt_insurance_plus"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_rectangle_round"
                        android:gravity="center"
                        android:layout_marginLeft="20dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_plus2"
                            android:tint="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="@color/txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_option"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:orientation="vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_description"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cash"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_cash"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/paypal"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/toggle_paypal"
                    android:layout_width="60dp"
                    app:tbOnColor="@color/head_color"
                    app:tbOffColor="@color/boder_color"
                    toggle:tbBorderWidth="2dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true">
                </com.zcw.togglebutton.ToggleButton>
            </RelativeLayout>
            <TextView
                android:id="@+id/txv_post"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Sybmit for Approval"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="17dp"
                style="@style/btn_buttonStyle"
                android:background="@drawable/button_rectangle_round"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>