<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lyt_container"
    android:background="@color/head_color"
    android:padding="20dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_book"
                    android:tint="@color/white"
                    />
                <TextView
                    style="@style/boldtextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bookings"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_close" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/lyt_business_diary"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_rectangle_round"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_birthday"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business Diary"
                android:textColor="@color/head_color"
                style="@style/btn_buttonStyle"
                android:singleLine="true"
                android:layout_gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_future_booking"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/edit_rectangle_round"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:tint="@color/head_color"
                android:src="@drawable/ic_drawer_off" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Future Bookings"
                android:textColor="@color/head_color"
                style="@style/btn_buttonStyle"
                android:singleLine="true"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>