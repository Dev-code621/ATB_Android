<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:background="@color/head_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Medium Text"
            style="@style/boldtextTheme"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"/>
        <org.angmarch.views.NiceSpinner
            android:id="@+id/spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="United Kingdom"
            android:textSize="18sp"
            app:popupTextAlignment="center"
            android:textColor="@color/head_color"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:textTint="@color/txt_color"
            app:arrowTint="@color/txt_color"
            android:gravity="center"
            android:background="@color/txt_color"
            android:backgroundTint="@color/head_color"/>
    </LinearLayout>

</LinearLayout>
