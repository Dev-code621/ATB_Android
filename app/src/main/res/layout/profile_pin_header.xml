<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:background="@color/head_color">

    <LinearLayout
        android:id="@+id/lyt_profile_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Medium Text"
            style="@style/boldtextTheme"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"/>
        <org.angmarch.views.NiceSpinner
            android:id="@+id/spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:popupTextAlignment="center"
            android:textColor="@color/head_color"
            android:textAlignment="center"
            android:layout_gravity="center"
            app:textTint="@color/txt_color"
            app:arrowTint="@color/txt_color"
            android:gravity="center"
            android:background="@color/txt_color"
            android:backgroundTint="@color/head_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_pin_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/lyt_currentbid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/hama"
                android:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Bid"
                style="@style/boldtextTheme"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/imv_hint1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_report"
                android:tint="@color/white"/>
        </LinearLayout>
       <LinearLayout
           android:id="@+id/lyt_yourbid"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginLeft="20dp"
           android:gravity="center">
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/icon_profile"
               android:tint="@color/white"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Your Bid"
               style="@style/boldtextTheme"
               android:textColor="@color/white"
               android:gravity="center"
               android:textSize="18sp"/>
           <ImageView
               android:id="@+id/imv_hint2"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_marginLeft="10dp"
               android:src="@drawable/ic_report"
               android:tint="@color/white"/>
       </LinearLayout>

    </LinearLayout>
</LinearLayout>
