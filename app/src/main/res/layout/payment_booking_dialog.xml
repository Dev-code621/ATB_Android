<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/transparent_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_rectangle_round"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <ImageView
                    android:id="@+id/imv_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/image_thumnail"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/txv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="£30.0"
                    style="@style/boldtextTheme"
                    android:textColor="@color/head_color"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/lyt_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imv_type"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ico_deliver"
                        android:padding="5dp"
                        android:tint="@color/white"
                        android:background="@drawable/button_rectangle_round"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/txv_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deliver"
                            style="@style/boldtextTheme"
                            android:textColor="@color/txt_color"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/txv_delivery_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="+£0,00"
                            style="@style/textTheme"
                            android:textColor="@color/txt_color"
                            android:textSize="15sp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:src="@drawable/icon_close"
                app:tint="@color/txt_color" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would you like to pay?"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The seller has specified you can pay with Paypal or Cash"
            style="@style/textTheme"
            android:textColor="@color/txt_color"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/lyt_paypal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_border_round"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_paypal"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_paymentpaypal"
                android:tint="@color/head_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/txv_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Use your PayPal account"
                    android:gravity="center"
                    android:textColor="@color/txt_color"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    style="@style/boldtextTheme" />
                <TextView
                    android:id="@+id/txv_paypal_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="richard@gmail.com"
                    android:gravity="center"
                    android:textColor="@color/txt_color"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    style="@style/textTheme" />
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_checked1"
                android:layout_marginLeft="10dp"
                android:tint="@color/white"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_cash"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangle_border_round"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/imv_cash"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_cash"
                android:tint="@color/head_color"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/txv_cash1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cash"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/txt_color"
                    style="@style/boldtextTheme" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txv_cash2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Agree with the seller"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/head_color"
                        style="@style/textTheme" />
                    <ImageView
                        android:id="@+id/imv_cash2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_bubble"
                        android:layout_marginLeft="10dp"
                        android:tint="@color/head_color"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_checked1"
                android:layout_marginLeft="20dp"
                android:tint="@color/white"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txv_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Pay"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            style="@style/btn_buttonStyle"
            android:background="@drawable/button_rectangle_round"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</LinearLayout>