<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/rectangle_border_round"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:singleLine="true"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"/>
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:id="@+id/imv_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="0"
                    app:srb_numberOfStars="5"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/head_color"
                    android:layout_gravity="center"
                    app:srb_isIndicator="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/txv_review"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    style="@style/textTheme"
                    android:maxLines="1"
                    android:textColor="@color/txt_color"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/btShowmore"
                    android:layout_width="wrap_content"
                    android:text="Read more..."
                    android:textAllCaps="false"
                    android:textColor="@color/head_color"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|bottom"
                    android:layout_height="wrap_content" />
            </LinearLayout>
          <TextView
                android:id="@+id/txv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="january 2021"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/head_color"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>