<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.BookingActivity"
    android:background="@color/signup_popup_color"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_birthday" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/future_bookings"
                style="@style/boldtextTheme"
                android:layout_marginLeft="10dp"
                android:textColor="@color/txt_color"
                android:textSize="25sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/icon_close"
            android:tint="@color/lite_gray"/>
        <LinearLayout
            android:id="@+id/lyt_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txt_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/boldtextTheme"
                android:layout_marginLeft="10dp"
                android:textColor="@color/head_color"
                android:textSize="16sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_show"
                android:layout_marginLeft="10dp"
                android:tint="@color/head_color"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_date"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_transaction" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/what_time"
                style="@style/boldtextTheme"
                android:layout_marginLeft="10dp"
                android:textColor="@color/txt_color"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/show_confirm"
                style="@style/boldtextTheme"
                android:layout_marginRight="10dp"
                android:textColor="@color/head_color"
                android:layout_gravity="right"
                android:textSize="16sp"
                android:gravity="right"/>
            <ImageView
                android:id="@+id/imv_selector"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/edit_category_selector"
                android:layout_gravity="right|center" />
        </LinearLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/list_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:listSelector="@color/transparent"
        android:scrollbars="none"/>
</LinearLayout>