<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.TellYourFriendActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#495462">
        <LinearLayout
            android:id="@+id/lyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_back2"
                android:tint="@color/white"
                android:paddingLeft="20dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            style="@style/boldtextTheme"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lyt_back"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#495462"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_enveloper"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="26sp"
                    style="@style/boldtextTheme"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="Invite your friends with\nyour code"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    style="@style/textTheme"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="And get benefits with each new\nregistration under your name"
                    android:layout_marginBottom="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/head_color"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    style="@style/textTheme"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Or send using the following\nSocial Media"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_facebook"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="#3A5997">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/invite_facebook"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_twitter"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="#2EC9FF">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/invite_twitter"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_instagram"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="#FF851C">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/invite_instagram"/>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_youtube"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="30dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="#DD4B39">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/invite_youtube"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_showmore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        style="@style/boldtextTheme"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:text="Show More Options"
                        android:background="@drawable/under_line"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/icon_share"
                        android:tint="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardCornerRadius="35dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:cardBackgroundColor="@color/white">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        style="@style/boldtextTheme"
                        android:textColor="@color/txt_color"
                        android:text="Show More Options"
                        android:gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_gravity="center"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_share"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardCornerRadius="35dp"
                        android:layout_gravity="right"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="#E3677F">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_link"
                            android:tint="@color/white"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>


</LinearLayout>