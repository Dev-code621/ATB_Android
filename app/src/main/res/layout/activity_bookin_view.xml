<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toggle="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.booking.BookinViewActivity"
    android:orientation="vertical"
    android:background="@color/signup_popup_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/lyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_back2"
                android:paddingLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bookings"
                android:layout_gravity="center"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:layout_marginLeft="5dp"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_add_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:background="@drawable/edit_rectangle_round"
            android:padding = "5dp"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_birthday"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_calendar"
                android:layout_gravity="center"
                style="@style/textTheme"
                android:textColor="@color/head_color"
                android:layout_marginLeft="5dp"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/txv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MF"
                    style="@style/textTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/txv_useremail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="a@gmail.com"
                    android:layout_gravity="center"
                    style="@style/textTheme"
                    android:textColor="@color/head_color"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/lyt_message"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_rectangle_round"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_bubble"
                    android:layout_gravity="center"
                    android:tint="@color/white"/>
                <TextView
                    android:id="@+id/txv_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/message"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    style="@style/boldtextTheme"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boder_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/txv_booking_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            style="@style/textTheme"
            android:textColor="@color/txt_color"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_birthday" />
            <TextView
                android:id="@+id/txv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TuesDay 22 August"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/head_color"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_transaction"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/txv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 am"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:textSize="16sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txv_booking_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking description"
            style="@style/textTheme"
            android:textColor="@color/txt_color"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boder_color"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/invoice"
            style="@style/boldtextTheme"
            android:textColor="@color/txvcolor_trasnparent"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_per_booking"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="15sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/boder_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txv_booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$235.00"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deposit"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="15sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/boder_color"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txv_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_pending"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView
                android:id="@+id/txv_pending_funds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$235.00"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_cash"
                android:layout_centerVertical="true"
                android:tint="@color/txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/have_user_cash"
                style="@style/textTheme"
                android:textColor="@color/txvcolor_trasnparent"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:orientation="vertical" />
            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/toggle_cash"
                android:layout_width="60dp"
                app:tbOnColor="@color/head_color"
                app:tbOffColor="@color/boder_color"
                toggle:tbBorderWidth="2dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true">
            </com.zcw.togglebutton.ToggleButton>
        </RelativeLayout>
        <TextView
            android:id="@+id/txv_request_paypal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/request_paypal"
            android:gravity="center"
            android:textColor="@color/txt_color"
            android:layout_marginTop="17dp"
            style="@style/btn_buttonStyle"
            android:background="@drawable/edit_rectangle_round"
            android:layout_marginBottom="30dp"/>
        <LinearLayout
            android:id="@+id/lyt_request_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_profile_round"
                android:tint="@color/txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_change"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_arrow"
                android:tint="@color/txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_request_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/star3"
                android:tint="@color/txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/request_rating"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_arrow"
                android:tint="@color/txt_color"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_cancel_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_report"
                android:tint="@color/txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel_booking"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_arrow"
                android:tint="@color/txt_color"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>