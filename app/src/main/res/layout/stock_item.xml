<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lyt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@color/signup_popup_color"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imv_stocker_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_category_selector"
            android:layout_gravity="right|center" />
        <TextView
            android:id="@+id/txv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Â£30.1"
            android:textSize="15sp"
            style="@style/textTheme"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/txt_color"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_rectangle_round"
            android:layout_marginRight="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_paymentblue"
                android:layout_gravity="center"/>
            <EditText
                android:id="@+id/edt_price"
                style="@style/edit_inputtext"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textSize="13sp"
                android:gravity="right|center" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/txv_minus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_rectangle_round"
                android:text="-"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/txv_count"
                style="@style/edit_inputtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="13sp"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true" />
            <TextView
                android:id="@+id/txv_plus"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_rectangle_round"
                android:text="+"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="22sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>