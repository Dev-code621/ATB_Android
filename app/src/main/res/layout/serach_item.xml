<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:id="@+id/lyt_item"
    android:paddingBottom="5dp"
    android:background="@color/signup_popup_color"
    android:paddingTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_rectangle_round"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            android:layout_marginLeft="10dp"
            app:cardUseCompatPadding="false">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/boldtextTheme"
                    android:text="Wedding R US"
                    android:textSize="16sp"
                    android:textColor="@color/head_color"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/location_arrow"
                    app:tint="@color/head_color" />
                <TextView
                    android:id="@+id/txv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/boldtextTheme"
                    android:text="5KM"
                    android:textSize="14sp"
                    android:textColor="@color/head_color"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/textTheme"
                android:text="we have a good location"
                android:maxLines="2"
                android:textSize="14sp"
                android:textColor="@color/txt_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star8"
                    app:tint="@color/head_color" />
                <TextView
                    android:id="@+id/txv_star"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/boldtextTheme"
                    android:text="4.9 / 5.0 (565)"
                    android:textSize="14sp"
                    android:textColor="@color/head_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/atb_approved"
                    app:tint="@color/txt_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>