<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:id="@+id/lyt_container"
    android:background="@drawable/background_rectangle_round1">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Variation Name"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="20sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/icon_close"
            app:tint="@color/txt_color" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:hint="Variation name"
                style="@style/edit_inputtext" />
            <androidx.cardview.widget.CardView
                android:id="@+id/remove_name"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="9dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@color/trush_background"
                android:layout_marginLeft="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/file_trash"
                android:layout_gravity="center"
                app:tint="@color/discard_color" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Variation Options"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lyt_option1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <EditText android:id="@+id/edt_option1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:hint="option1"
                        style="@style/edit_inputtext" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/remove_option1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="9dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/trush_background"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/file_trash"
                            android:layout_gravity="center"
                            app:tint="@color/discard_color" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_option2"
                    android:layout_width="match_parent"
