                        android:layout_weight="1"
                        android:hint="option7"
                        android:singleLine="true"
                        style="@style/edit_inputtext" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/remove_option7"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="9dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/trush_background"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/file_trash"
                            android:layout_gravity="center"
                            app:tint="@color/discard_color" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_option8"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <EditText android:id="@+id/edt_option8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="option8"
                        android:singleLine="true"
                        style="@style/edit_inputtext" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/remove_option8"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="9dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="@color/trush_background"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/file_trash"
                            android:layout_gravity="center"
                            app:tint="@color/discard_color" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/lyt_add_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_rest_plus"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add a new option"
                style="@style/boldtextTheme"
                android:textColor="@color/head_color"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txv_addvariation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:theme="@style/boldtextTheme"
            android:textSize="20sp"
            android:text="Add Variation"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_rectangle_round"/>
    </LinearLayout>
</LinearLayout>