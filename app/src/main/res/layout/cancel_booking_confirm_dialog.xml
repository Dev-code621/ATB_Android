<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_rectangle_round"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/close3"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This booking has been\ncancelled"
            android:gravity="center"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="23sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due to you do have cancel this booking,\nthe user will be having a full refund."
            style="@style/textTheme"
            android:gravity="center"
            android:textColor="@color/txt_color"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/txv_back"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/followbutton_border_round"
            android:gravity="center">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_back2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:theme="@style/boldtextTheme"
                android:text="Go back to bookings"
                android:layout_marginLeft="10dp"
                android:textColor="@color/head_color"
                android:gravity="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>