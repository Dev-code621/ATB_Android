<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_rectangle_round"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:id="@+id/imv_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/imv_background"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_user_info_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        android:visibility="gone">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/imv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/profile_pic"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txv_name"
                            android:layout_width="wrap_content"
                            android:singleLine="true"
                            android:layout_height="wrap_content"
                            android:text="JESSICA MCLAURENCE"
                            android:layout_weight="3"
                            android:layout_gravity="center_vertical"
                            style="@style/boldtextTheme"
                            android:textColor="@color/txt_color"
                            android:textSize="14sp" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"/>
                        <LinearLayout
                            android:id="@+id/lyt_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <TextView
                                android:id="@+id/txv_other_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ricard Guard"
                                android:gravity="right"
                                android:singleLine="true"
                                style="@style/boldtextTheme"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/head_color"
                                android:textSize="13sp" />
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/btn_arrow"
                                app:tint="@color/head_color"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/imv_rating"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star4"
                            android:layout_marginRight="10dp"/>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/txv_itemnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Items"
                    style="@style/textTheme"
                    android:visibility="gone"
                    android:textColor="@color/txt_color"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/lyt_profile2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txv_other_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ricard Guard"
                        android:singleLine="true"
                        style="@style/boldtextTheme"
                        android:textColor="@color/head_color"
                        android:textSize="13sp" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/btn_arrow"
                        app:tint="@color/head_color"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Total: $4.90"
                    style="@style/textTheme"
                    android:textColor="@color/head_color"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imv_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/txt_color"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/txv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21.08.20"
                        style="@style/textTheme"
                        android:textColor="@color/txt_color"
                        android:textSize="13sp" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_gravity="right" >
                        <ImageView
                            android:id="@+id/imv_btn_arrow"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_message3"
                            android:layout_marginRight="12dp"
                            android:tint="@color/head_color"
                            android:layout_gravity="right|center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </FrameLayout>
    </LinearLayout>
</LinearLayout>
