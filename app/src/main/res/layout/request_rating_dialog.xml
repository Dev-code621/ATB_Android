<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_rectangle_round"
        android:orientation="vertical"
        android:padding="20dp">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <FrameLayout
              android:id="@+id/lyt_profile"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true">
              <androidx.cardview.widget.CardView
                  android:id="@+id/card_user_info_image"
                  android:layout_width="50dp"
                  android:layout_height="50dp"
                  app:cardCornerRadius="25dp"
                  android:layout_gravity="center"
                  app:cardElevation="0dp"
                  app:cardUseCompatPadding="false">
                  <com.facebook.drawee.view.SimpleDraweeView
                      android:id="@+id/imv_profile"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      app:actualImageScaleType="centerCrop"
                      app:placeholderImage="@drawable/images"/>
              </androidx.cardview.widget.CardView>
              <androidx.cardview.widget.CardView
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  app:cardCornerRadius="10dp"
                  app:cardElevation="0dp"
                  android:layout_gravity="bottom|right"
                  app:cardUseCompatPadding="false"
                  app:cardBackgroundColor="@color/green">
                  <ImageView
                      android:id="@+id/imv_business"
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_send"
                      android:tint="@color/white"/>
              </androidx.cardview.widget.CardView>
          </FrameLayout>
          <RatingBar
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:numStars="5"
              android:isIndicator="true"
              android:layout_marginLeft="10dp"/>
      </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_notification"
            style="@style/boldtextTheme"
            android:textColor="@color/head_color"
            android:textSize="23sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_notification_description"
            style="@style/textTheme"
            android:textColor="@color/txt_color"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>