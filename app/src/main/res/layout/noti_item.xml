<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_rectangle_round"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/txv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HonestDev01"
                android:textSize="15sp"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"/>
            <TextView
                android:id="@+id/txv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business has requested a ratfszgassgsging from you "
                android:layout_marginTop="4dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/txv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="27days ago"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/head_color"
                android:ellipsize="end"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_unread_noti"
            android:layout_width="13dp"
            android:layout_height="13dp"
            app:cardCornerRadius="6dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="#E3677F"/>
    </LinearLayout>
</LinearLayout>