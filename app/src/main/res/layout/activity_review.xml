<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.profile.ReviewActivity"
    xmlns:progressview="http://schemas.android.com/tools"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/head_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/back"
            android:tint="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thaya sap"
                    style="@style/boldtextTheme"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textSize="25sp"/>
                <TextView
                    android:id="@+id/txv_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thaya sap"
                    style="@style/boldtextTheme"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/head_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/imv_star"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srb_starSize="40dp"
                app:srb_rating="0"
                app:srb_numberOfStars="1"
                app:srb_borderColor="@color/white"
                app:srb_fillColor="@color/white"
                android:layout_gravity="center"
                app:srb_isIndicator="true"/>
            <TextView
                android:id="@+id/txv_star"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/boldtextTheme"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/txv_count"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="0 reviewes"
                style="@style/textTheme"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="17sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="5"
                    app:srb_starsSeparation="0.1dp"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/white"
                    android:focusableInTouchMode="false"
                    app:srb_isIndicator="true"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/main_color1">
                    <com.diffey.view.progressview.ProgressView
                        android:id="@+id/progressview5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressview:backgroundColor="#eee"
                        progressview:max="100"
                        progressview:progress="0"
                        progressview:progressColor="#A6BFDE"
                        progressview:textColor="#eee"
                        progressview:textGravity="right" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txv_star5"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="4"
                    app:srb_starsSeparation="0.1dp"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/white"
                    android:focusableInTouchMode="false"
                    app:srb_isIndicator="true"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/main_color1">
                    <com.diffey.view.progressview.ProgressView
                        android:id="@+id/progressview4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressview:backgroundColor="#eee"
                        progressview:max="100"
                        progressview:progress="0"
                        progressview:progressColor="#A6BFDE"
                        progressview:textColor="#eee"
                        progressview:textGravity="right" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txv_star4"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="3"
                    app:srb_starsSeparation="0.1dp"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/white"
                    android:focusableInTouchMode="false"
                    app:srb_isIndicator="true"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/main_color1">
                    <com.diffey.view.progressview.ProgressView
                        android:id="@+id/progressview3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressview:backgroundColor="#eee"
                        progressview:max="100"
                        progressview:progress="0"
                        progressview:progressColor="#A6BFDE"
                        progressview:textColor="#eee"
                        progressview:textGravity="right" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txv_star3"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="2"
                    app:srb_starsSeparation="0.1dp"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/white"
                    android:focusableInTouchMode="false"
                    app:srb_isIndicator="true"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/main_color1">
                    <com.diffey.view.progressview.ProgressView
                        android:id="@+id/progressview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressview:backgroundColor="#eee"
                        progressview:max="100"
                        progressview:progress="0"
                        progressview:progressColor="#A6BFDE"
                        progressview:textColor="#eee"
                        progressview:textGravity="right" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txv_star2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.iarcuschin.simpleratingbar.SimpleRatingBar
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:srb_starSize="20dp"
                    app:srb_rating="1"
                    app:srb_starsSeparation="0.1dp"
                    app:srb_borderColor="@color/head_color"
                    app:srb_fillColor="@color/white"
                    android:focusableInTouchMode="false"
                    app:srb_isIndicator="true"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardBackgroundColor="@color/main_color1">
                    <com.diffey.view.progressview.ProgressView
                        android:id="@+id/progressview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        progressview:backgroundColor="#8F8F8F"
                        progressview:max="100"
                        progressview:progress="0"
                        progressview:progressColor="#A6BFDE"
                        progressview:textColor="#eee"
                        progressview:textGravity="right" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/txv_star1"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:singleLine="true"
                    android:gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/signup_popup_color"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Display Most Recent Reviews"
            android:layout_gravity="center_vertical"
            style="@style/boldtextTheme"
            android:singleLine="true"
            android:textColor="@color/txt_color"
            android:textSize="18sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sort_arrow"
            android:tint="@color/txt_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/list_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:listSelector="@color/transparent"
            android:scrollbars="none"/>
        <TextView
            android:id="@+id/txv_rate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Rate this Business"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            style="@style/btn_buttonStyle"
            android:enabled="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_rectangle_round"/>
    </LinearLayout>

</LinearLayout>