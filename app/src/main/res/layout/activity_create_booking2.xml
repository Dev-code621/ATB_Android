<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.booking.CreateBooking2Activity"
    android:background="@color/signup_popup_color"
    android:orientation="vertical"
    android:id="@+id/lyt_container">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_back2"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_create_booking"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="22sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_birthday" />
                <TextView
                    android:id="@+id/txv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TuesDay 22 August"
                    style="@style/boldtextTheme"
                    android:textColor="@color/head_color"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/head_color"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_transaction"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/txv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 am"
                    style="@style/boldtextTheme"
                    android:textColor="@color/head_color"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/txv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_service"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imv_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:src="@drawable/imv_background" />
            <ImageView
                android:id="@+id/imv_video"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_player"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report"
                app:tint="@color/txt_color"
                android:layout_marginLeft="6dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/txv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$234.00"
            style="@style/boldtextTheme"
            android:textColor="@color/head_color"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/boder_color"
            android:layout_marginTop="20dp"/>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                app:tint="@color/txt_color"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_detail"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_rectangle_round">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText android:id="@+id/edt_email"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:hint="@string/user_email"
                    style="@style/edit_inputtext" />
                <ImageView
                    android:id="@+id/check_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/check_mak1"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/lyt_exist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/txv_exist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/str_back_one_more_end"
                    android:theme="@style/boldtextTheme"
                    android:textSize="13sp"
                    android:textColor="@color/green" />
                <LinearLayout
                    android:id="@+id/lyt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_user_info_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/imv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/profile_pic"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/txv_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MF"
                            style="@style/textTheme"
                            android:textColor="@color/txt_color"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/txv_useremail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="a@gmail.com"
                            android:layout_gravity="center"
                            style="@style/textTheme"
                            android:textColor="@color/head_color"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/imv_close"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/close"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_rectangle_round">
            <EditText android:id="@+id/edt_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:singleLine="true"
                android:inputType="text"
                android:hint="@string/name"
                style="@style/edit_inputtext" />
            <ImageView
                android:id="@+id/check_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/check_mak1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_rectangle_round">
            <EditText android:id="@+id/edt_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:hint="@string/phone"
                style="@style/edit_inputtext" />
            <ImageView
                android:id="@+id/check_phone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:src="@drawable/check_mak1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txv_create"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/create_booking"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            style="@style/btn_buttonStyle"
            android:background="@drawable/button_rectangle_round"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
    </ScrollView>

</LinearLayout>