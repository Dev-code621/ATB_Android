<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/txv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M F"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/txv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyboard repair"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_delete"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/deletebutton_border_round"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/txv_unfollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:gravity="center"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/discard_color"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>