<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.SetOperatingActivity"
    android:orientation="vertical"
    android:background="@color/signup_popup_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/head_color">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"
            android:paddingLeft="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_transaction"
                android:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Operating Hours"
                style="@style/boldtextTheme"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txv_regular_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:theme="@style/boldtextTheme"
            android:text="Regular Week"
            android:gravity="center"
            android:textColor="@color/txt_color"
            android:background="@color/signup_popup_color"/>
        <TextView
            android:id="@+id/txv_holiday"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:theme="@style/boldtextTheme"
            android:text="Holidays/Off"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/btn_login_color"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_regular_week"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:theme="@style/textTheme"
                    android:text="Working Day"
                    android:textColor="@color/txt_color"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:theme="@style/textTheme"
                    android:text="OPEN"
                    android:gravity="center"
                    android:textColor="@color/txt_color"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:theme="@style/textTheme"
                    android:text="CLOSE"
                    android:gravity="center"
                    android:textColor="@color/txt_color"/>
            </LinearLayout>
           <ScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:layout_marginTop="10dp"
               android:scrollbars="none">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:id="@+id/lyt_check1"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector1"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Monday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime1"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime1"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check2"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector2"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Tuesday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime2"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime2"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check3"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector3"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Wednesday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime3"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime3"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check4"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector4"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Thursday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime4"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime4"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check5"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector5"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Friday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime5"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime5"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check6"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector6"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Saturday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime6"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime6"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp"
                       android:orientation="horizontal"
                       android:layout_marginTop="10dp">
                       <LinearLayout
                           android:id="@+id/lyt_check7"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="match_parent"
                           android:orientation="horizontal"
                           android:gravity="center_vertical">
                           <ImageView
                               android:id="@+id/imv_selector7"
                               android:layout_width="20dp"
                               android:layout_height="20dp"
                               android:layout_gravity="right|center"
                               android:src="@drawable/edit_category_selector" />
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:theme="@style/textTheme"
                               android:text="Sunday"
                               android:textColor="@color/txt_color"/>
                       </LinearLayout>
                       <TextView
                           android:id="@+id/txv_starttime7"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="8:00 AM"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                       <TextView
                           android:id="@+id/txv_endtime7"
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:theme="@style/textTheme"
                           android:text="6:00 PM"
                           android:layout_marginLeft="10dp"
                           android:gravity="center"
                           android:textColor="@color/txt_color"
                           android:background="@drawable/edit_rectangle_round"/>
                   </LinearLayout>
                   <TextView
                       android:id="@+id/txv_save"
                       android:layout_width="match_parent"
                       android:layout_height="60dp"
                       android:layout_weight="1"
                       android:theme="@style/boldtextTheme"
                       android:text="Save Changes"
                       android:gravity="center"
                       android:layout_marginTop="20dp"
                       android:textColor="@color/white"
                       android:background="@drawable/button_rectangle_round"
                       android:layout_marginBottom="20dp"/>
               </LinearLayout>
           </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_holiday"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/lyt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_minus1"
                android:tint="@color/discard_color"/>
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textColor="@color/discard_color"
                android:theme="@style/boldtextTheme"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="The Following days will be closed for any reservation"/>
        </LinearLayout>
        <ListView
            android:id="@+id/list_holiday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginTop="10dp"
            android:listSelector="@color/transparent"
            android:scrollbars="none"/>
        <LinearLayout
            android:id="@+id/lyt_add_calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_birthday" />
            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:textColor="@color/head_color"
                android:theme="@style/boldtextTheme"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:text="Add another custom holiday"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>