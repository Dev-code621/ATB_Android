<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/signup_popup_color"
    android:id="@+id/lyt_container"
    android:padding="20dp"
    tools:context=".activities.register.forgotPassword.InputVerificationCodeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back2"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_lock"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotpassword3"
            android:textColor="@color/signup_textcolor"
            android:theme="@style/boldtextTheme"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgotpassword4"
        android:gravity="center"
        android:textColor="@color/signup_textcolor"
        android:theme="@style/textTheme"
        android:layout_marginTop="5dp"
        android:textSize="16sp"/>
    <com.tuo.customview.VerificationCodeView
        android:id="@+id/icv_code"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="26dp"
        app:icv_et_bg_focus="@drawable/shape_icv_et_bg_focus"
        app:icv_et_bg_normal="@drawable/shape_icv_et_bg_normal"
        app:icv_et_divider_drawable="@drawable/shape_divider_identifying"
        app:icv_et_number="6"
        app:icv_et_pwd="false"
        app:icv_et_pwd_radius="10dp"
        app:icv_et_text_color="@color/txt_color"
        app:icv_et_width="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I didn't receive any code"
        android:gravity="center"
        android:textColor="@color/signup_textcolor"
        android:theme="@style/textTheme"
        android:layout_marginTop="20dp"
        android:textSize="16sp"/>
    <LinearLayout
        android:id="@+id/lyt_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/under_line2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-send Code"
            android:gravity="center"
            android:textColor="@color/head_color"
            style="@style/boldtextTheme"
            android:textSize="15sp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/txv_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Verify Code"
        android:gravity="center"
        android:clickable="false"
        android:textColor="@color/line_white"
        android:layout_marginTop="10dp"
        style="@style/btn_buttonStyle"
        android:background="@drawable/button_rectangle_round"
        android:layout_marginBottom="80dp"/>

</LinearLayout>