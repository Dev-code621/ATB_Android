<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">
    <TextView
        android:id="@+id/txv_timeslot"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="8:00 am"
        style="@style/boldtextTheme"
        android:layout_marginLeft="10dp"
        android:textColor="@color/signup_textcolor"
        android:textSize="20sp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:id="@+id/lyt_addbooking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edit_rectangle_round"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/leftdetail"
                android:layout_gravity="right|center"
                android:layout_marginLeft="10dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/free_slot"
                    style="@style/textTheme"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/signup_textcolor"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/add_booking"
                    style="@style/boldtextTheme"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/txt_color"
                    android:textSize="20sp"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/txt_color"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/imv_selector"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/edit_category_selector"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_booking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/button_rectangle_round"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:layout_marginLeft="10dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txv_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Women Haircut"
                    style="@style/boldtextTheme"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/txv_id"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Jessica.@Xandi"
                    style="@style/textTheme"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_arrow"
                android:layout_gravity="right|center"
                android:layout_marginRight="10dp"
                android:tint="@color/white" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>