<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.other.ProfileRatingActivity"
    xmlns:progressview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/lyt_container"
    android:background="@color/head_color">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/head_color"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left|center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:tint="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/head_color">
        <TextView
            android:id="@+id/txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thaya sap"
            style="@style/boldtextTheme"
            android:singleLine="true"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/txv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thaya sap"
            style="@style/boldtextTheme"
            android:singleLine="true"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What do you think about this\nbusiness?"
        style="@style/boldtextTheme"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rectangle_round1">
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srb_starSize="50dp"
            app:srb_rating="5"
            app:srb_starsSeparation="10dp"
            app:srb_stepSize="1"
            app:srb_borderColor="@color/star_color"
            android:layout_marginTop="10dp"
            app:srb_fillColor="@color/star_color" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Why makes it good?"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:layout_marginTop="20dp"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(optional)"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/edit_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:gravity="top"
            android:padding="5dp"
            android:hint="Description"
            android:background="@drawable/edit_rectangle_round"
            android:layout_margin="10dp"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txv_rate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send Rating"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        style="@style/btn_buttonStyle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_button_rectangle_round"/>

</LinearLayout>