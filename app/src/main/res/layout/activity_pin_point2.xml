<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyt_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/lyt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/signup_popup_color">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/boldtextTheme"
            android:text="Search for..."
            android:textColor="@color/txt_color"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/btn_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:actualImageScaleType="centerCrop"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            app:placeholderImage="@drawable/btn_arrow1"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_rectangle_round"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp">
            <ImageView
                android:id="@+id/lyt_servie"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_boost_service"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/background_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_rectangle_round"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                android:layout_marginLeft="10dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/background_hint"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/button_rectangle_round"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/lyt_sale"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_boost_sale"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/background_hint"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_init"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/boder_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/boldtextTheme"
                android:text="Other results"
                android:textColor="@color/boder_color"
                android:textSize="20sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/boder_color"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background_pin_point"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyt_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textTheme"
                    android:text="Pin Point gives business users the opportunity to promote their business via Pin Point Tag words and Phrases."
                    android:textColor="@color/txt_color"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/boldtextTheme"
                    android:text="How does this work?"
                    android:textColor="@color/head_color"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textTheme"
                    android:text="@string/how_des_work1"
                    android:textColor="@color/txt_color"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"/>
            </LinearLayout>
        </ScrollView>
        <FrameLayout
            android:id="@+id/lyt_pin_point"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_rectangle_round"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Take me to Spot Light"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                style="@style/btn_buttonStyle" />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/btn_arrow"
                android:layout_gravity="right|center"
                android:tint="@color/white"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>