<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.CreateAmendBioActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/lyt_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/head_color"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <ImageView
                    android:id="@+id/imv_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_back"
                    android:paddingLeft="20dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_location"
                        android:tint="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Location &amp; Rdius"
                        style="@style/boldtextTheme"
                        android:textSize="25sp"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/location_detail"
                    style="@style/textTheme"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp">

                <FrameLayout
                    android:id="@+id/lyt_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <TextView android:id="@+id/edt_serach"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:singleLine="true"
                        android:inputType="text"
                        android:gravity="center_vertical"
                        android:paddingRight="50dp"
                        android:hint="@string/search_description"
                        style="@style/edit_inputtext" />
                    <ImageView
                        android:id="@+id/imv_selector"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:src="@drawable/icon_search"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="10dp" />
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/lyt_send"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/login_button_rectangle_round"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_send" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                    <com.warkiz.widget.IndicatorSeekBar
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:id="@+id/seekbarProgress"
                        app:isb_max="80"
                        app:isb_min="1"
                        app:isb_progress="1"
                        app:isb_seek_smoothly="true"
                        app:isb_show_tick_marks_type= "oval"
                        app:isb_tick_marks_size="25dp"
                        app:isb_tick_texts_color="@color/txt_color"
                        app:isb_thumb_color="@color/head_color"
                        app:isb_indicator_color="@color/head_color"
                        app:isb_tick_marks_ends_hide="true"
                        app:isb_tick_marks_swept_hide="true"
                        app:isb_thumb_size="30dp"
                        app:isb_track_background_color="@color/signup_popup_color"
                        app:isb_track_background_size="20dp"
                        app:isb_track_progress_color="@color/head_color"
                        app:isb_track_progress_size="15dp"
                        app:isb_thumb_text_color="@color/black"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"/>
                    <TextView
                        android:id="@+id/txv_progress"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="1KM"
                        style="@style/boldtextTheme"
                        android:textColor="@color/txt_color"
                        android:textSize="25sp"
                        android:layout_marginRight="20dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txv_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/save_setting"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                style="@style/btn_buttonStyle"
                android:background="@drawable/button_rectangle_round"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <com.arlib.floatingsearchview.FloatingSearchView
        android:id="@+id/floating_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:floatingSearch_close_search_on_keyboard_dismiss="false"
        app:floatingSearch_dimBackground="false"
        app:floatingSearch_dismissOnOutsideTouch="true"
        app:floatingSearch_leftActionMode="showHamburger"
        app:floatingSearch_searchHint="Search By POSTCODE"
        app:floatingSearch_showSearchKey="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:floatingSearch_suggestionsListAnimDuration="250"
        />
</RelativeLayout>