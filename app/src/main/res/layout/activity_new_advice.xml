<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.newsfeedpost.NewAdviceActivity"
    android:orientation="vertical"
    android:background="@color/signup_popup_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:id="@+id/lyt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/icon_back2"
                android:paddingLeft="20dp"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Advice"
            style="@style/boldtextTheme"
            android:textColor="@color/txt_color"
            android:textSize="24sp"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/lyt_back"
            android:layout_marginLeft="10dp"/>
        <FrameLayout
            android:id="@+id/lyt_profile"
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_business"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="right|bottom"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="@color/head_color">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_down_up" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:id="@+id/lyt_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="40dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/media_type"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spiner_media_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    app:entries="@array/media_type"
                    style="@style/textTheme"
                    app:popupTextAlignment="start"
                    android:textSize="15sp"
                    android:background="@drawable/edit_rectangle_round1"/>
            </LinearLayout>
            <FrameLayout
                android:id="@+id/lyt_image_video"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone">
                <FrameLayout
                    android:id="@+id/lyt_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edit_rectangle_round1"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/imv_videothumnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/imv_videoicon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_videoadd"
                        android:layout_gravity="center"/>
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/lyt_image"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/edit_rectangle_round1"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:id="@+id/imv_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/imv_imageicon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_image"
                            android:layout_gravity="center"/>
                    </FrameLayout>
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="80dp"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/imv_image1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image2"
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1"
                                android:layout_marginTop="10dp" />
                            <ImageView
                                android:id="@+id/imv_image3"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:src="@drawable/icon_image1"
                                android:background="@drawable/edit_rectangle_round1" />
                            <ImageView
                                android:id="@+id/imv_image4"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image5"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image6"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image7"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                            <ImageView
                                android:id="@+id/imv_image8"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:scaleType="centerCrop"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:src="@drawable/icon_image1"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/edit_rectangle_round1"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </FrameLayout>

            <EditText
                android:id="@+id/edt_title"
                style="@style/edit_inputtext"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:hint="@string/writtle_title"
                android:inputType="text"
                android:theme="@style/textTheme"
                android:textSize="15sp"
                android:singleLine="true" />
            <EditText android:id="@+id/edt_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:inputType="text"
                android:maxLines="5"
                android:hint="@string/description"
                android:layout_marginTop="15dp"
                android:paddingTop="15dp"
                android:theme="@style/textTheme"
                android:textSize="15sp"
                style="@style/edit_inputtext"
                android:gravity="start"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/post_in"
                    style="@style/boldtextTheme"
                    android:textColor="@color/txt_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" />
                <org.angmarch.views.NiceSpinner
                    android:id="@+id/spiner_category_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    app:entries="@array/category_type"
                    style="@style/textTheme"
                    android:textSize="15sp"
                    app:popupTextAlignment="start"
                    android:background="@drawable/edit_rectangle_round1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/txv_post"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/complete_post"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                style="@style/btn_buttonStyle"
                android:background="@drawable/button_rectangle_round"
                android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>