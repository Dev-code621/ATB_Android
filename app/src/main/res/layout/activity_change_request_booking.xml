<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.navigationItems.booking.ChangeRequestBookingActivity"
    android:background="@color/signup_popup_color"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="bottom">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icon_profile_round"
                app:tint="@color/head_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request a Change"
                style="@style/boldtextTheme"
                android:layout_marginLeft="10dp"
                android:textColor="@color/head_color"
                android:textSize="25sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/icon_close"
            android:tint="@color/lite_gray"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/txv_booking_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MF"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:textSize="18sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_birthday" />
                <TextView
                    android:id="@+id/txv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TuesDay 22 August"
                    style="@style/boldtextTheme"
                    android:textColor="@color/head_color"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/head_color"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_transaction"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/txv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 am"
                    style="@style/boldtextTheme"
                    android:textColor="@color/head_color"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.applikeysolutions.cosmocalendar.view.CalendarView
                android:id="@+id/calendar_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:orientation="horizontal"
                app:calendarBackgroundColor="@color/signup_popup_color"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_transaction" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/what_time"
                        style="@style/boldtextTheme"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/txt_color"
                        android:textSize="18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lyt_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/show_confirm"
                        style="@style/boldtextTheme"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/head_color"
                        android:layout_gravity="right"
                        android:textSize="16sp"
                        android:gravity="right"/>
                    <ImageView
                        android:id="@+id/imv_selector"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/edit_category_selector"
                        android:layout_gravity="right|center" />
                </LinearLayout>
            </RelativeLayout>
            <ListView
                android:id="@+id/list_booking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:listSelector="@color/transparent"
                android:scrollbars="none"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/button_rectangle_round"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/lyt_book"
        android:visibility="gone">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_profile_round"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/txv_booking"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:text="Send Change Request"
            android:gravity="center"
            android:theme="@style/boldtextTheme" />
    </LinearLayout>

</LinearLayout>