<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.profile.boost.ProfilePinAnimationActivity"
    android:background="@drawable/background_boost1"

    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
    <LinearLayout
        android:id="@+id/lyt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_back2"
            android:paddingLeft="15dp"
            android:tint="@color/white"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Spot"
        style="@style/boldtextTheme"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <LinearLayout
            android:id="@+id/lyt_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_rectangle_round"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/icon_noti"
                        app:tint="@color/head_color" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:cardCornerRadius="6dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="#E3677F"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true" >
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_logo1" />
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/frame_noti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp">
                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:src="@drawable/ic_bubble"
                        app:tint="@color/head_color" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        app:cardCornerRadius="6dp"
                        android:layout_weight="1"
                        android:layout_gravity="right"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false"
                        app:cardBackgroundColor="#E3677F"/>
                </FrameLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_boost_service"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_boost_sale"/>
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_user_info_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        android:layout_gravity="center"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="false">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/imv_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:actualImageScaleType="centerCrop"
                            app:placeholderImage="@drawable/profile_pic"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_boost_advice"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/icon_boost_poll"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imv_init"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_profilepin"/>
            <LinearLayout
                android:id="@+id/lyt_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/textTheme"
                            android:text="Profile pin gives the business the opportunity to pin\ntheir profile at the top of a group as\ndetailed below for 1 week."
                            android:textColor="@color/txt_color"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/boldtextTheme"
                            android:text="How does this work?"
                            android:textColor="@color/head_color"
                            android:textSize="18sp"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/textTheme"
                            android:text="@string/how_des_work"
                            android:textColor="@color/txt_color"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="30dp"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </ScrollView>
                <FrameLayout
                    android:id="@+id/lyt_profile_pin"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_rectangle_round"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Take me to Top Spot"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        style="@style/btn_buttonStyle" />
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/btn_arrow"
                        android:layout_gravity="right|center"
                        android:tint="@color/white"
                        android:layout_marginRight="20dp"/>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>