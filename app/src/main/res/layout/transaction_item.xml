<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_rectangle_round"
        android:layout_marginTop="5dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_user_info_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_gravity="center"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            android:layout_marginLeft="10dp">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/imv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:actualImageScaleType="centerCrop"
                app:placeholderImage="@drawable/profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/txv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â£30.1"
                android:textSize="15sp"
                style="@style/boldtextTheme"
                android:textColor="@color/txt_color"/>
            <TextView
                android:id="@+id/txv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M F"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/txv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keyboard repair"
                android:layout_marginTop="4dp"
                android:singleLine="true"
                android:textSize="15sp"
                style="@style/textTheme"
                android:textColor="@color/txt_color"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right">
            <TextView
                android:id="@+id/txv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="january 2afafafaf021"
                android:singleLine="true"
                android:textSize="14sp"
                android:gravity="right"
                style="@style/textTheme"
                android:layout_marginRight="10dp"
                android:textColor="@color/head_color"
                android:ellipsize="end"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>