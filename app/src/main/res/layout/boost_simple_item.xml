<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/edit_rectangle_round"
        android:gravity="center_vertical"
        android:padding="5dp">
        <FrameLayout
            android:id="@+id/lyt_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_user_info_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/imv_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:actualImageScaleType="centerCrop"
                    app:placeholderImage="@drawable/profile_pic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:cardCornerRadius="8dp"
                android:layout_gravity="left|bottom"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:cardBackgroundColor="#9DD02B">
                <TextView
                    android:id="@+id/txv_bidnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
        <TextView
            android:id="@+id/txv_price"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            style="@style/boldtextTheme"
            android:text="£5.00"
            android:gravity="center"
            android:textColor="@color/txt_color"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_bidnumber"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@color/head_color">
            <TextView
                android:id="@+id/txv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_rectangle_round1">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="£"
                android:textColor="@color/txt_color"
                android:gravity="center"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/txv_bidprice"
                style="@style/edit_inputtext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:hint="0.0"
                android:text="5.00"
                android:textSize="15sp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:singleLine="true" />
            <TextView
                android:id="@+id/txv_bid"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_rectangle_round"
                android:text="Bid"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
