<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EmptyView">
        <attr name="evTitle" format="reference" />
        <attr name="evMessage" format="reference" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">

        <attr name="border_width" format="dimension"/>

        <attr name="border_color" format="color"/>

    </declare-styleable>
    <declare-styleable name="ImageZoomButton">
        <attr name="modeReverse" format="boolean" />
        <attr name="duration" format="integer" />
    </declare-styleable>
    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format ="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="inputType"/>
    </declare-styleable>
    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>

    <declare-styleable name="ShapeOfView">
        <attr name="shape_clip_drawable" format="reference"/>
    </declare-styleable>


    <declare-styleable name="ArcView">
        <attr name="shape_arc_height" format="dimension"/>
        <attr name="shape_arc_position" format="enum">
            <enum name="bottom" value="1"/>
            <enum name="top" value="2"/>
            <enum name="left" value="3"/>
            <enum name="right" value="4"/>
        </attr>
        <attr name="shape_arc_cropDirection" format="enum">
            <enum name="inside" value="1"/>
            <enum name="outside" value="2"/>
        </attr>
    </declare-styleable>
</resources>